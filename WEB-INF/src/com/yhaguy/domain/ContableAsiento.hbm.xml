<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//hibernate/hibernate Mapping DTD 3.0//EN"
        "classpath://org/hibernate/hibernate-mapping-3.0.dtd"
        [ <!ENTITY hibernate-domain SYSTEM "classpath://com/coreweb/hibernate-domain.hbm.xml"> ]>

<hibernate-mapping>

	<class name="com.yhaguy.domain.ContableAsiento" table="contable_asiento">

		&hibernate-domain; 

		<property name="fecha" type="date"/>
		<property name="numero" />
		<property name="descripcion" />
			
		<set name="detalles" table="contable_asiento_detalle"
			inverse="false" lazy="false" fetch="join"
			cascade="all">
			<key>
				<column name="idAsiento" not-null="false" />
			</key>
			<one-to-many entity-name="com.yhaguy.domain.ContableAsientoDetalle" />
		</set>
		

	</class>
</hibernate-mapping>