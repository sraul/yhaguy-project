<?xml version="1.0" encoding="UTF-8"?>

<!-- Created by ZK Studio -->

<zk>

	<session-config>
		<device-type>ajax</device-type>
		<automatic-timeout>true</automatic-timeout>
		<timeout-uri>/core/timeout.zul</timeout-uri>
		<session-timeout>-30</session-timeout>
		<timer-keep-alive>true</timer-keep-alive>
	</session-config>



	<library-property>
		<name>org.zkoss.theme.preferred</name>
		<value>silvertail</value>
	</library-property>


	<library-property>
		<name>org.zkoss.zul.progressbox.position</name>
		<value>center</value>
	</library-property>

	<system-config>
		<disable-event-thread>false</disable-event-thread>
	</system-config>

	<language-config>
		<addon-uri>/WEB-INF/lang-addon.xml</addon-uri>
	</language-config>
	
	<language-config>
		<addon-uri>/WEB-INF/lang-addon-app.xml</addon-uri>
	</language-config>
	
	<listener> 
		<description>Desktop cleanup</description> 
		<listener-class> 
			com.coreweb.login.ControlInicio 
		</listener-class> 
	</listener>

	<client-config> 
		<keep-across-visits>false</keep-across-visits> 
	</client-config> 

